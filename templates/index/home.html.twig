<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block stylesheets %}
        {# 'app' must match the first argument to addEntry() in webpack.config.js #}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500&display=swap" rel="stylesheet">
    <title>My Portfolio</title>
</head>
<body>

    <header class="pt-4">
        <nav class="navbar navbar-expand-lg sticky-top bg-transparent">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img class="navbar-logo" src="{{ asset('build/img/logo.png') }}" alt="Pectorel" height="60">
                    <span class="navbar-logo-text d-inline-block align-middle ms-3">Pectorel.inc</span>
                </a>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="#" class="nav-link">Who I am</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">What I do</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">What I did</a>
                        </li>
                    </ul>
                </div>
                <ul id="nav-language" class="navbar-nav ms-2">
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            <img src="https://www.countryflagicons.com/FLAT/48/GB.png" alt="en">
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#" class="dropdown-item">
                                    <img src="https://www.countryflagicons.com/FLAT/48/FR.png" alt="fr">
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>

            </div>
        </nav>

        <div class="header-text container text-center">

            <p>
                I share <span class="text-decoration-underline">open-source,</span> collaborative
                projects to <span class="text-decoration-underline">help other developers</span> on
                <span class="text-decoration-underline">Symfony</span> and <span class="text-decoration-underline">train myself</span>
            </p>
            <a href="#" class="btn btn-primary mt-5">Who am I ?</a>

        </div>

    </header>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>